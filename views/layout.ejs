                  />
                  <div class="input-group-append">
                    <button class="btn btn-primary" type="submit" onclick="handleSubscription(event)">
                      <span>Subscribe</span>
                      <i class="icon-long-arrow-right"></i>
                    </button>
                  </div>
                </div>
              </form>
            </div>
            <!-- End .col-sm-10 col-md-8 col-lg-6 -->
          </div>
          <!-- End .row -->
        </div>
        <!-- End .container -->
      </div>
      <!-- End .cta -->
      <div class="footer-middle">
            <div class="container">
              <div class="row">
                <div class="col-sm-6 col-md-3 col-lg-3">
                  <div class="widget widget-about"></div>
